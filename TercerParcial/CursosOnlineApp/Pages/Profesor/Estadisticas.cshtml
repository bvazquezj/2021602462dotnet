@page
@model CursosOnlineApp.Pages.Profesores.EstadisticasModel
@{
    ViewData["Title"] = "Estadísticas del Profesor";
    Layout = "_Layout";
}

<div class="max-w-7xl mx-auto p-8">
    <h1 class="text-4xl font-bold mb-6 text-indigo-700">Estadísticas del Profesor</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10">
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <h2 class="text-2xl font-semibold mb-2">Total de Cursos</h2>
            <p class="text-4xl font-bold text-indigo-600">@Model.TotalCursos</p>
        </div>
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <h2 class="text-2xl font-semibold mb-2">Total de Inscritos</h2>
            <p class="text-4xl font-bold text-indigo-600">@Model.TotalInscritos</p>
        </div>
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <h2 class="text-2xl font-semibold mb-2">Progreso Promedio</h2>
            <p class="text-4xl font-bold text-indigo-600">@Model.ProgresoPromedio.ToString("0.0")%</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Cursos con Más Inscritos</h3>
            <ul class="divide-y divide-gray-200">
                @foreach (var curso in Model.CursosConMasInscritos)
                {
                    <li class="py-3 flex justify-between">
                        <span>@curso.Titulo</span>
                        <span>@curso.Inscritos inscritos</span>
                    </li>
                }
            </ul>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Cursos con Mejor Progreso</h3>
            <ul class="divide-y divide-gray-200">
                @foreach (var curso in Model.CursosConMejorProgreso)
                {
                    <li class="py-3 flex justify-between">
                        <span>@curso.Titulo</span>
                        <span>@curso.Progreso.ToString("0.0")%</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
