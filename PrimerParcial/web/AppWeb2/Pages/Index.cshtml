@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div>
        <h2 class="text-center">Personas</h2>
        <table class="table table-striped table-bordered table-hover container ">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Telefono</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Persona p in Model.listaPersonas)
                {
                    <tr style="background-color: #f2f2f2; text-align: center;">
                        <td style="padding: 10px; border: 1px solid #ddd;">@p.name</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@p.age</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@p.cellFone</td>
                        <td style="padding: 10px; border: 1px solid #ddd; text-underline-offset: initial;"><a href="">Editar</a></td>
                        <td style="padding: 10px; border: 1px solid #ddd; text-underline-offset: initial;"><a href="">Borrar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
