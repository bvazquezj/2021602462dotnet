@page
@model EstadisticModel
@{
    ViewData["Title"] = "Estadísticas";
}
<div class="text-center">
    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">@ViewData["title"]</h1>

    <div class="bento-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-8">
        <!-- Aprovechamiento General -->
        <div
            class="bento-item bg-gradient-to-r from-indigo-500 to-blue-500 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">Aprovechamiento General</h3>
            <p class="text-4xl font-extrabold mt-2">@Model.data2[0].promedio</p>
        </div>

        <!-- Mejor Alumno -->
        <div
            class="bento-item bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">Mejor Alumno</h3>
            <p class="text-2xl mt-2">@Model.data2[0].mejores[0].nombre</p>
            <p class="text-4xl font-extrabold">@Model.data2[0].mejores[0].promedio</p>
        </div>

        <!-- Peor Alumno -->
        <div
            class="bento-item bg-gradient-to-r from-red-500 to-orange-500 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">Peor Alumno</h3>
            <p class="text-2xl mt-2">@Model.data2[0].peores[0].nombre</p>
            <p class="text-4xl font-extrabold">@Model.data2[0].peores[0].promedio</p>
        </div>

        <!-- Aprobados -->
        <div
            class="bento-item bg-gradient-to-r from-green-500 to-teal-500 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">Aprobados</h3>
            <p class="text-4xl font-extrabold mt-2">@Model.data2[0].porcentaje.Aprobados%</p>
        </div>

        <!-- Reprobados -->
        <div
            class="bento-item bg-gradient-to-r from-yellow-500 to-amber-500 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">Reprobados</h3>
            <p class="text-4xl font-extrabold mt-2">@Model.data2[0].porcentaje.Reprobados%</p>
        </div>

        <div
            class="bento-item bg-gradient-to-r from-teal-500 to-lime-400 text-white rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 ease-in-out p-6 flex flex-col items-center justify-center hover:shadow-2xl">
            <h3 class="text-xl font-bold text-center">N° de Alumnos</h3>
            <p class="text-4xl font-extrabold mt-2">@Model.dts.Tables[0].Rows.Count</p>
        </div>
    </div>
</div>
